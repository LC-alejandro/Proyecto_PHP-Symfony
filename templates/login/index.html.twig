{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    {{ parent() }}
    {%  if error %}
        <div>Debes introducir el usuario y el password</div>
    {% endif %}
<div class="container">
    <div class="col-xs-12 col-sm-8 col-sm-push-2">
    <h1>LOGIN</h1>

    <form class="form-horizontal" action="{{ path('login') }}" method="post">
        <div class="form-group">
            <div class="col-xs-12">
                <label class="label-control" for="username">Username:</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                <label class="label-control" for="password">Password:</label>
                <input class="form-control" type="password" id="password" name="_password"/>
            </div>
        </div>
        <!-- REDIRIGIR A HOME -->
        <div class="form-group">
            <div class="col-xs-12">

        <button class="pull-right btn btn-lg sr-button"type="submit">Enviar</button>
            </div>
        </div>
    </form>
    </div>
</div>


{% endblock %}
{% block footer %}
{% endblock %}